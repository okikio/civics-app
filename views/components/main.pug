mixin image(val)
  section.layout-col-6
    img.layout-img.layout-margin-vert(src=val.src alt=val.alt)
  
section.layout-contain.layout-margin-vert-bottom-small
  section.layout-padding-vert-small
    small
      a.color-grey(href='/') Home
      |  / 
      a.page-link(href=`/${title}`)= title
  section.layout-hero
    img.layout-hero-img(src=hero.src alt=hero.alt)
    span.layout-hero-img-txt= title
    
each val, i in info
  section.layout-content(
    class=`${val.padTop || !val.nopad ? 'layout-padding-vert-top' : ''} 
           ${val.padBottom || !val.nopad ? 'layout-padding-vert-bottom' : ''} 
           ${typeof val.background === 'string' ? 'layout-' + val.background : ''}`)
    section.layout-contain
      section.layout-row  
        if val.split
          each split in val.split
            if split
              if !split.fullImage
                +content(split, val.split && val.split.length <= 1)
              if split.img
                +image(split.img)
        else
          if i % 2 == 1
            if val.img
              +image(val.img)
            +content(val, typeof val.img == 'undefined')
          else 
            +content(val, typeof val.img == 'undefined')
            if val.img
              +image(val.img)
extends template/layout

block content
  section.layout-contain.layout-margin-vert-bottom-small
    section.layout-padding-vert-small
      small
        a.page-link.color-red(href='/') Home
    section.layout-hero
      img.layout-hero-img(src=hero.src alt=hero.alt)
      h1.layout-hero-img-title= title
    
  each tile in pagelist
    section.layout-content.layout-padding-vert(class=`${typeof tile.background === 'string' ? 'layout-' + tile.background : ''}`)
      section.layout-contain
        section.tile.tile-small
          section.tile-image
            img.tile-img(src=tile.hero.src alt=tile.hero.alt)
          footer.tile-footer
            h2.tile-title= tile.title
            span= tile.content

  

